<?xml version="1.0" encoding="utf-8"?>

<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.userinfo.UserInfoActivity">

<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userinfo_imv_picture"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:minHeight="@dimen/userinfo_picture_height"
            app:layout_constraintTop_toTopOf="parent" android:scaleType="centerCrop" android:adjustViewBounds="true"
            android:background="@android:color/darker_gray"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userinfo_txv_title_name"
            android:layout_marginTop="@dimen/view_margin_small"
            app:layout_constraintTop_toBottomOf="@+id/userinfo_imv_picture" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/view_margin_small"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/view_margin_small"
            tools:text="@string/userinfo_title_name" style="@style/TextViewRegular"/>
    <TextView
            android:text="@string/userinfo_value_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userinfo_txv_value_name" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/view_margin_small"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/view_margin_small"
            app:layout_constraintTop_toBottomOf="@+id/userinfo_txv_title_name"
            android:layout_marginTop="@dimen/view_margin_small" style="@style/TextViewPrimary"/>
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/userinfo_pgb_picture"
            app:layout_constraintStart_toStartOf="@+id/userinfo_imv_picture"
            app:layout_constraintEnd_toEndOf="@+id/userinfo_imv_picture" android:layout_marginEnd="@dimen/view_margin_small"
            android:layout_marginRight="@dimen/view_margin_small"
            app:layout_constraintBottom_toBottomOf="@+id/userinfo_imv_picture" android:layout_marginTop="@dimen/view_margin_small"
            app:layout_constraintTop_toTopOf="@+id/userinfo_imv_picture"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userinfo_txv_title_email" android:layout_marginStart="@dimen/view_margin_small"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/view_margin_small"
            android:layout_marginTop="@dimen/view_margin_small"
            app:layout_constraintTop_toBottomOf="@+id/userinfo_txv_value_name" tools:text="@string/userinfo_title_email"
            style="@style/TextViewRegular"/>
    <TextView
            android:text="@string/userinfo_value_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userinfo_txv_value_email" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/view_margin_small" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/view_margin_small"
            app:layout_constraintTop_toBottomOf="@+id/userinfo_txv_title_email"
            android:layout_marginTop="@dimen/view_margin_small" style="@style/TextViewPrimary"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userinfo_txv_title_phone"
            app:layout_constraintTop_toBottomOf="@+id/userinfo_txv_value_email"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/view_margin_small"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/view_margin_small"
            android:layout_marginTop="@dimen/view_margin_small"
            tools:text="@string/userinfo_title_phone" style="@style/TextViewRegular"/>
    <TextView
            android:text="@string/userinfo_value_phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/userinfo_txv_value_phone" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/view_margin_small" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/view_margin_small"
            android:paddingBottom="@dimen/view_padding_small"
            app:layout_constraintTop_toBottomOf="@+id/userinfo_txv_title_phone"
            android:layout_marginTop="@dimen/view_margin_small" android:textStyle="bold"
            style="@style/TextViewPrimary"/>
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>